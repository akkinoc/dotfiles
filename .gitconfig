[alias]
    a = add
    aa = add -A
    ap = add -p
    b = branch -vv
    ba = branch -avv
    br = browse
    c = commit
    ca = commit --amend --no-edit
    cl = clean -df
    co = checkout
    cp = cherry-pick
    d = diff -p --stat
    f = fetch --all
    ge = grep -I
    l = log --graph --name-status
    ll = log --date=short --pretty=line
    ls = ls-files -s --abbrev
    m = merge --no-edit
    p = pull
    r = rebase
    ri = rebase -i
    s = status
    sh = show -p --stat
    st = stash
    std = stash drop
    sti = stash push -u
    stl = stash list
    sto = stash pop
    sts = stash show
    t = tag
    tl = tag -ln
    u = push -u
[color]
    ui = auto
[color "grep"]
    filename = magenta
    linenumber = green
    match = bold red
    separator = cyan
[commit]
    cleanup = scissors
    gpgsign = true
    verbose = true
[core]
    attributesfile = ~/.gitattributes
    autocrlf = false
    excludesfile = ~/.gitignore
    quotepath = false
[diff]
    colormoved = dimmed_zebra
[fetch]
    prune = true
    prunetags = true
[format]
    pretty = fuller
[grep]
    linenumber = true
    patterntype = extended
[init]
    defaultbranch = main
[interactive]
    singlekey = true
[log]
    abbrevcommit = true
    date = iso
    decorate = short
    follow = true
[merge]
    ff = false
    stat = true
[pretty]
    line = %C(auto)%h%C(reset) %C(blue)%ad%C(reset) %C(magenta)%<(13,trunc)%an%C(reset) %s%C(auto)%d%C(reset)
[pull]
    ff = only
[push]
    default = current
    followtags = true
[rebase]
    abbreviatecommands = true
    autostash = true
    backend = apply
    stat = true
[stash]
    showstat = true
[status]
    branch = true
    short = true
    showuntrackedfiles = all
[tag]
    forcesignannotated = true
    sort = -version:refname
